<root main_tree_to_execute="MainTree">
    <BehaviorTree ID="MainTree">
        <!-- infinite loop -->
        <DecoratorLoop num_cycles="-1">
            <FallbackNoMemory name="MissionFallback">

                <!-- re-check box & beer on every tick -->
                <ReactiveSequence name="CheckAndFetch">
                    <ConditionBoxPresent name="BoxPresent" box_frame="{box_frame}" />
                    <ConditionBeerPresent name="BeerPresent" beer_frames="{beer_frames}" />
                    <ActionGetClosestBeer
                        name="ChooseBeer"
                        beer_frames="{beer_frames}"
                        target_beer_frame="{target_beer_frame}" />
                    <SubTree ID="GraspBeer" />
                    <SubTree ID="PlaceBeer" />
                </ReactiveSequence>

                <!-- fallback to wandering if sequence fails -->
                <ActionNavigate
                    name="Wander"
                    wander="true"
                    target_frame="" />

            </FallbackNoMemory>
        </DecoratorLoop>
    </BehaviorTree>

    <!-- GraspBeer Subtree -->
    <BehaviorTree ID="GraspBeer">
        <Sequence name="GraspBeerSeq">
            <ActionNavigate
                name="NavToBeerParking"
                wander="false"
                target_frame="{target_beer_frame}_grasp_parking" />
            <ActionManipulate
                name="PickBeer"
                manipulation="pick"
                pre_target_frame="{target_beer_frame}_pregrasp"
                target_frame="{target_beer_frame}" />
        </Sequence>
    </BehaviorTree>

    <!-- PlaceBeer Subtree -->
    <BehaviorTree ID="PlaceBeer">
        <Sequence name="PlaceBeerSeq">
            <ActionNavigate
                name="NavToBoxParking"
                wander="false"
                target_frame="{box_frame}_place_parking" />
            <ActionManipulate
                name="PlaceBeer"
                manipulation="place"
                pre_target_frame="{box_frame}_preplace"
                target_frame="{box_frame}" />
        </Sequence>
    </BehaviorTree>
</root>